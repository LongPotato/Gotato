<% provide(:title, 'Orders') %>

<div class="row">
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
      <b>New order</b>
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to "New direct order", new_user_order_path(current_user) %></a></li>
      <li><a href="#">From inventory</a></li>
    </ul>
  </div>
</div>

<div class="full-width-div">
<table class="table table-hover">
    <thead>
    <tr>
      <th width = "50">Order #</th>
      <th width ="400">Name</th>
      <th width = "100">Quantity</th>
      <th width = "400">Customer</th>
      <th width ="300">Description</th>
      <th width ="300">Note</th>
      <th width ="300">Store</th>
      <th width ="50">Image</th>
      <th width ="110">Order date</th>
      <th width ="110">Receive US</th>
      <th width ="110">Ship VN</th>
      <th width ="50">Web price</th>
      <th width ="150">Tax</th>
      <th width ="150">Reward</th>
      <th width ="150">Shipping US</th>
      <th width ="150">Total</th>
      <th width ="150">Shipping VN</th>
       <th width ="150">Ship ID</th>
      <th width ="150">Total cost</th>
      <th width ="150">Selling price</th>
      <th width ="150">Deposit</th>
      <th width ="150">Profit</th>
      <th width ="150">Action</th>
    </tr>
    </thead>

    <% @orders.each do |order| %>
    <tbody>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.name.capitalize %></td>
          <td><%= order.quantity %></td>
          <td><%= order.customer.try(:name).try(:capitalize) %></td>
          <td><%= order.description %></td>
          <td><%= order.note %></td>
          <td><%= order.store.try(:capitalize) %></td>
          <td>
            <%= (link_to "View", "#{order.image_link}",:target => "_blank") if order.image_link.present? %>
          </td>
          <td><%= order.order_date.try(:strftime, "%B %d, %Y") %></td>
          <td><%= order.receive_us.try(:strftime, "%B %d, %Y") %></td>
          <td><%= order.ship_vn.try(:strftime, "%B %d, %Y") %></td>
          <td>$<%= order.web_price.to_f %></td>
          <td>$<%= order.tax.to_f %></td>
          <td>$<%= order.reward.to_f %></td>
          <td>$<%= order.shipping_us.to_f %></td>
          <td>$<%= order.total.to_f %></td>
          <td>$<%= order.shipping_vn.to_f %></td>
          <td></td>
          <td>$<%= order.total_cost.to_f %></td>
          <td><%= number_with_delimiter(order.selling_price.to_f, :delimiter => ',') %></td>
          <td><%= number_with_delimiter(order.deposit.to_f, :delimiter => ',') %></td>
          <td><%= number_with_delimiter(order.profit.to_f, :delimiter => ',') %></td>
          <td>
           <div class="btn-group">
            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
            <span class="caret"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-right">
              <li><%= link_to "Edit", "" %></li>
              <li><%= link_to "Detail", user_order_path(current_user,order.id) %></li>
              <li class="divider"></li>
              <li><%= link_to "Delete", "" %></li>
            </ul>
            </div>
           </td>
        </tr>      
    </tbody>
    <% end %>

  </table>
</div>