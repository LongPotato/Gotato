<% provide(:title, 'Orders') %>

<div class="row nav-order">
  <button type="button" class="btn btn-success">
    <span class="glyphicon glyphicon-plus-sign" id="plus-new-order" aria-hidden="true"></span>
    <b><%= link_to "New order", new_user_order_path(current_user), class: "shipment_btn" %></b>
  </button>
  <div class="btn-group">
  <button class="btn btn-default dropdown-toggle view-btn" id="next-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
     Filter orders
     <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to "Clear all", "", method: :get %></li>
    <li class="divider"></li>
    <li><%= link_to "For Sale", {:sale => "1", :authenticity_token => nil}, method: :get %></li>
    <li><%= link_to "Ordered", {:placed => "1", :authenticity_token => nil}, method: :get  %></li>
  </ul>
  </div>
  <div class="btn-group">
  <button class="btn btn-default dropdown-toggle view-btn" id="next-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
     Display orders
     <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to "This month", user_orders_path(current_user), method: :get %></li>
    <li><%= link_to "Last 3 months", three_months_user_path(current_user), method: :get %></li>
  </ul>
  </div>

  <h5 class="text-muted pull-right">All orders</h5>

</div>


<%= render 'app/views/orders/order_table' %>