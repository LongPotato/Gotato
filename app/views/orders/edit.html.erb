<%= provide(:title, 'Edit order') %>

<h1>Edit Order #<%= @order.id %></h1>

<div class="row">
 <div class="col-md-6 col-md-offset-3">

 	<%= bootstrap_form_for([@user, @order]) do |f| %>
 	  <%= f.hidden_field :user_id, :value => @user.id %>

      <%= f.text_field :name %>

      <%= f.number_field :quantity %>

      <%= f.fields_for :customer do |c| %>
        <%= c.text_field :name, label: "Customer" %>
      <% end %>

      <%= f.text_field :store %>

      <%= f.url_field :image_link, label: "Image URL" %>

      <%= f.text_area :description, label: "Product description" %>

      <%= f.text_area :note %>

      <legend class="field"></legend>

      <%= f.text_field :order_date, icon: "calendar", 'data-provide' => 'datepicker', :class => "datepicker", help: "yyyy-mm-dd" %>

      <%= f.text_field :receive_us, icon: "calendar", 'data-provide' => 'datepicker', label: "Receive US", :class => "datepicker" %>

      <%= f.text_field :ship_vn, icon: "calendar", 'data-provide' => 'datepicker', label: "Ship VN", :class => "datepicker" %>

      <legend class="field"></legend>
      
      <%= f.text_field :web_price, prepend: "$" %>

      <%= f.text_field :tax, prepend: "$" %>

      <%= f.text_field :reward, prepend: "$" %>

      <%= f.text_field :shipping_us, prepend: "$" %>

      <legend class="field"></legend>

      <%= f.text_field :vnd, prepend: "VND", label: "VND to USD exchange rate", help: "Enter today exchange rate or use your predefined value in setting"  %>

      <%= f.check_box :use_user_rate, label: "Use my setting exchange rate" %>

      <legend class="field"></legend>

      <%= f.text_field :selling_price, prepend: "VND" %>

      <%= f.text_field :deposit, prepend: "VND" %>

      <legend class="field"></legend>
      
      <%= f.submit "Edit order", class: "btn btn-lg btn-warning" %>

      <%= link_to "Cancel", user_orders_path(current_user), class: "btn btn-lg btn-default" %>

 	<% end %>
 </div>
</div>

<script>
  $('.datepicker').datepicker({format: 'yyyy-mm-dd'});
</script>