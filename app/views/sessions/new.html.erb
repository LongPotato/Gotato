<% provide(:title, "Sign in") %>

<h1>Sign in</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">

  <%= bootstrap_form_for(:session, url: login_path) do |f| %>
    <%= f.email_field :email %>

    <%= f.password_field :password %>

    <%= f.check_box :remember_me %>

    <%= f.submit "Log me in", class: "btn btn-primary" %>

    <span>
      <button class="btn btn-default" id="next-btn" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Hmmm, Confused?
      </button>
      <div class="collapse" id="collapseExample">
        <div class="well refresh">
          <div class="button_div">
          <p>New user? <%= link_to "Sign up now!", signup_path %></p>
          <p>Forgot your password? <%= link_to "You know you messed up, right?", new_password_reset_path %></p>
          </div>
        </div>
        </div>
      </div>
    </span>
  <% end %>

  </div>
</div>